<p style="color: green"><%= notice %></p>
<div class= "row">
  <div class = "col-lg-12">
    <h2>Detail Product</h2>
    <%= link_to "Back to products", products_path, class: "btn btn-primary" %>
    <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-primary" %>
    <%= link_to "Destroy this product", @product, method: :delete, class: "btn btn-danger" %>
    <%= link_to "New Movement", new_movement_product_path(@product), class: "btn btn-primary" %>
    <%= link_to "Export to Excel", product_path(@product, format: :xlsx), class: "btn btn-success" %>

    <div class="card mt-2">
      <table>
        <tr>
          <td><b>Product Name</b></td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td><b>Reference</b></td>
          <td><%= @product.reference %></td>
        </tr>
        <tr>
          <td><b>Description</b></td>
          <td><%= @product.description %></td>
        </tr>
        <tr>
          <td><b>Quantity</b></td>
          <td><%= @product.quantity %></td>
        </tr>
        <tr>
          <td><b>Created at</b></td>
          <td><%= @product.created_at %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="row mt-2">
  <div class="col-lg-12">
    <div class="card">
      <h2>Movements</h2>
      <table>
        <thead>
          <tr>
            <th>Type</th>
            <th>Quantity</th>
            <th>Comment</th>
            <th>Date/time</th>
          </tr>
        </thead>
        <tbody>
          <% @product.movements.each do |movement| %>
            <tr>
              <td> <%= movement.movement_type_name %>
              </td>
              <td> <%= movement.quantity %>
              </td>
              <td> <%= movement.comment %>
              </td>
              <td> <%= movement.created_at %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>