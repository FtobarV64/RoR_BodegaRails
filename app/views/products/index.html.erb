<h2>Products</h2>

<a href="<%= new_product_path %>" class="btn btn-primary btn-icon-split">
  <span class="icon text-white-50">
    <i class="fas fa-flag"></i>
  </span>
  <span class="text">New Product</span>
</a>

<br>
<table class="table">
<thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Reference</th>
    <th>Quantity</th>
    <th>Events</th>
  </tr>
</thead>
<tbody>
  <% @products.each do |product|%>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= product.reference %></td>
      <td><%= 0 %></td>
      <td><%= link_to "Details", product_path(product), class: "btn btn-primary" %></td>
    </tr>
  <% end %>
</tbody>
